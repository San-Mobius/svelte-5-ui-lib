{
  "name": "@vikram-components/mobius-component",
  "version": "0.10.16",
  "description": "Svelte 5 UI Lib is a UI library built from scratch to leverage Svelte 5's runes system, creating smooth, reactive components.",
  "license": "MIT",
  "main": "dist/index.js",
  "homepage": "https://svelte-5-ui-lib.codewithshin.com/",
  "author": "Shinichi Okada <connect@codewithshin.com> (https://blog.codewithshin.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinokada/svelte-5-ui-lib.git"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "gen:exports": "svelte-lib-helpers exports",
    "gen:component-data-from-type": "svelte-lib-helpers component-data-from-type",
    "copy:packagejson": "svelte-lib-helpers package",
    "lib-helpers": "pnpm gen:component-data-from-type && pnpm format && pnpm package && pnpm gen:exports && pnpm copy:packagejson",
    "generate-file-list": "tsx scripts/generateFileList.ts",
    "prebuild": "npm run generate-file-list",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@playwright/test": "^1.48.2",
    "@popperjs/core": "^2.11.8",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.7.3",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "4.0.0",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.8.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.45.1",
    "globals": "^15.11.0",
    "highlight.js": "^11.10.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "publint": "^0.2.12",
    "runatics": "^0.1.3",
    "runes-meta-tags": "^0.4.0",
    "svelte": "5.1.9",
    "svelte-check": "^4.0.5",
    "svelte-lib-helpers": "^0.4.16",
    "svelte-rune-highlight": "^0.5.12",
    "tailwindcss": "^3.4.14",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^3.0.0"
  },
  "keywords": [
    "svelte 5",
    "sveltekit 2",
    "UI",
    "component library",
    "tailwindcss",
    "flowbite"
  ],
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
    "apexcharts": "^3.54.1",
    "clsx": "^2.1.1",
    "flowbite-svelte-icons": "^2.0.2",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./Accordion.svelte": {
      "types": "./dist/accordion/Accordion.svelte.d.ts",
      "svelte": "./dist/accordion/Accordion.svelte"
    },
    "./Accordions.svelte": {
      "types": "./dist/accordions/Accordions.svelte.d.ts",
      "svelte": "./dist/accordions/Accordions.svelte"
    },
    "./MobiusButton.svelte": {
      "types": "./dist/mobius/components/Button/MobiusButton.svelte.d.ts",
      "svelte": "./dist/mobius/components/Button/MobiusButton.svelte"
    },
    "./Utils.ts": "./dist/mobius/shared/index.d.ts",
    "./package.json": "./package.json"
  },
  "directories": {
    "test": "tests"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/shinokada/svelte-5-ui-lib/issues"
  }
}
